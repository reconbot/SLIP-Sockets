{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "target": "es2017",
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
  },
  "include": ["bin", "resources", "stacks"],
  "exclude": [
    "./**/*-test.ts",
  ],
  // necessary for tests
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
